<table class="table">
	<tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %></tr>

	<tr>
		<th>ユーザー名</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>自己紹介</th>
		<th><%= user.introduction %></th>
	</tr>

	<tr>
		<th>フォローしているUser:</th>
		<th><%= link_to user.followings.count, user_followings_path(user) %></th>
	</tr>
	<tr>
		<th>フォローされたUser:</th>
		<th><%= link_to user.followers.count, user_followers_path(user) %></th>
	</tr>
</table>

<div class="row">
	<%= link_to '変更', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>