<div class="row">
	<div class="col-xs-3">
<h2>ユーザー情報</h2>
<%= render 'users/profile', user: current_user %>

<h2>新規投稿</h2>
<%= render 'books/form', book: @book %>
</div>
<div class="col-xs-9">
<h2>ユーザー一覧</h2>
<!--users一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>写真</th>
			<th>ユーザー名</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= user.name %></td>
			<td><%= link_to "詳細", user_path(user), class: "user_#{user.id}" %></td>
			<td> <%= render "users/relationships", user: user %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<!--users一覧 -->
	</div>
</div>
