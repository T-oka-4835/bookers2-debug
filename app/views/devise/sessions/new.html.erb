<div class="devise-container">
<h2 class="devise-title">ログイン</h2>

<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
  <div class="field devise-field">
    <%= f.label :"ニックネーム" %>
    <%= f.text_field :name, autofocus: true, class: "name devise-form" %>
  </div>

  <div class="field devise-field">
    <%= f.label :"パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "password devise-form" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field devise-field">
      <%= f.check_box :remember_me %>
      <%= f.label :"パスワードを記録する" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

</div>